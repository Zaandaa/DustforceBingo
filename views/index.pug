extends layout

block js
	script(src="js/index.js")

block content
	div
		div
			h4.uppercase BINGO RULES

			div
				div Save file:
				select#save.session
					option(value="newgame") NG
					option(value="newgameplus") NG+
			div
				div Size:
				select#size.session
					option(value="3") 3 by 3
					option(value="5") 5 by 5
			div 
				div Bingo Type:
				select#bingo_type.session
					option(value="lockout") Lockout
					option(value="traditional") Traditional
				
			div
				div First to:
				select#bingo_count.session
					each val, i in Array(25)
						option(value=i+1 class='option' + (i+1))= i+1
				select#bingo_count_type.session
					option(value="bingo") Bingos
					option(value="card") Cards

		div
			h4 Advanced Goal Options

			button#show_adv(type="button") Show

			div#goals_advanced
				div
					div Allow goals to require characters
					input#characters.session(   type="checkbox" checked)
				div
					div Include apples
					input#apples.session(       type="checkbox" checked) 
				div
					div Include difficults
					input#difficults.session(   type="checkbox") 
					div Including Yotta SS? 
					input#yottass.session(      type="checkbox") 
				div 
					div Low dash
					input#lowdash.session(      type="checkbox")
				div 
					div Low jump
					input#lowjump.session(      type="checkbox")
				div 
					div Low direction
					input#lowdirection.session( type="checkbox") 

		div
			h2 Generate seed
			button#generate(type="button") Generate