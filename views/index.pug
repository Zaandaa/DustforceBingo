extends layout

block js
	script(src="/js/index.js")

block content
	h4.uppercase BINGO RULES
	div.row
		div.col-md-8
			div.form-group
				div.checkbox
					label
						input#lockout.session(type="checkbox" checked)
						div Lockout
			div.form-group
				div Save file:
				select#save.session.form-control
					option(value="newgame") NG
					option(value="newgameplus") NG+
			div.form-group
				div Size:
				select#size.session.form-control
					option(value="3") 3 by 3
					option(value="5") 5 by 5
			div.form-group
				div Difficulty:
				select#difficulty.session.form-control
					option(value="4") Easy
					option(value="3" selected) Normal
					option(value="2") Hard
					option(value="1") Very hard
			div.form-group
				div Length:
				select#length.session.form-control
					option(value="3") Fast
					option(value="2" selected) Normal
					option(value="1") Any
			div.form-group
				div First to:
				select#bingo_count.session.form-control
					each val, i in Array(25)
						option(value=i+1 class='option' + (i+1))= i+1
				select#bingo_count_type.session.form-control
					option(value="bingo") Bingos
					option(value="card") Cards

		div.col-md-4
			h4 Advanced Goal Options

			button#show_adv.btn(data-toggle="collapse" data-target="#goals_advanced_div") Show

			div#goals_advanced_div.collapse
				div.checkbox
					label
						input#characters.session(   type="checkbox" checked)
						div <img class="icon" src="http://dustkid.com/static/iconAll.png" /> Allow goals to require characters 
				div.checkbox
					label
						input#apples.session(       type="checkbox" checked)
						div <img class="icon" src="http://dustkid.com/static/iconApple.png" /> Include apples 
				div.checkbox
					label
						input#tutorials.session(    type="checkbox") 
						div <img class="character" src="http://dustkid.com/static/iconDustman.png" />  Include tutorials 
				div.checkbox
					label
						input#difficults.session(   type="checkbox") 
						div <img class="icon" src="/img/iconDonger.png" /> Include difficults 
				div.checkbox
					label
						input#yottass.session(      type="checkbox") 
						div <img class="icon" src="/img/iconDonger.png" /> Include Yotta SS 
				div.checkbox
					label
						input#lowdash.session(      type="checkbox")
						div <img class="icon" src="http://dustkid.com/static/iconNoDash.png" /> Low dash 
				div.checkbox
					label
						input#lowjump.session(      type="checkbox")
						div <img class="icon" src="http://dustkid.com/static/iconNoJump.png" /> Low jump 
				div.checkbox
					label
						input#lowattack.session(    type="checkbox")
						div <img class="icon" src="http://dustkid.com/static/iconNoAttack.png" /> Low attack 
				div.checkbox
					label
						input#lowdirection.session( type="checkbox") 
						div <img class="icon" src="http://dustkid.com/static/iconNoDirection.png" /> Low direction
				div.checkbox
					label
						input#lowpercent.session(   type="checkbox")
						div <img class="icon" src="/img/iconLow.png" /> Low percent
				div.checkbox
					label
						input#somepercent.session(  type="checkbox")
						div <img class="icon" src="http://dustkid.com/static/iconSome.png" /> Some percent 
	div.row
		div.col-md-2
		div.col-md-6
			button#generate.btn.btn-primary.btn-lg.btn-block Generate seed